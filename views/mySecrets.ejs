<%- include('partial/header') %>


<body>

<%- include('partial/headerSecret') %>

<div class="" style="padding: 100px 200px">
  <h1>Мои секреты</h1>
  <% for (var i =0 ; i<array.length; i ++) { %>
  <div class="bg-light row" style="padding: 50px 50px; border-radius:10px ;margin-bottom:30px">
    <div class="col-8" >
      <h3><%= array[i].title %></h3>
      <p><%= array[i].text.substring(0, 100) + " ..." %>  <a href="/mySecrets/<%=array[i].title%>">Read More</a></p>
    </div>
    <div class="col-4" style="padding-top:20px">
      <form class="" action="/editSecret" method="post" style="display:inline-block; padding-right:20px ; padding-bottom:10px">
        <button class="btn btn-outline-success" type="submit" name="editButton" value="<%- array[i]._id %>">Редактировать</button>
      </form>
      <form class="" action="/deleteSecret" method="post" style="display:inline-block">
        <button class="btn btn-outline-danger" type="submit" name="deleteButton" value="<%- array[i]._id %>">Удалить</button>
      </form>
    </div>

  </div>

  <% } %>
</div>












</body>

<%- include('partial/footer') %>
