<%- include('partial/header') %>



<body style="background-color: #F1F6F5">
  <div class="outHome">
    <div class="registrationContainer">
      <h1>Регистрация</h1>
      <div class="bg-white" style="padding:50px 20px 50px;margin-top:30px; border-radius:5px">
        <form class="" action="/registration" method="post">
          <div class="mb-3">
            <label for="email" class="form-label"><strong>Email адрес</strong></label>
            <input type="email" class="form-control" id="email" name="RegName" placeholder="name@example.com">
          </div>
          <div class="mb-3">
            <label for="password" class="form-label"><strong>Пароль</strong></label>
            <input type="password" class="form-control" id="password" name="RegPass" placeholder="*******">
          </div>
          <button class="btn btn-secondary" style="margin-top:20px" type="submit" name="RegistrationButton">Создать аккаунт</button>
        </form>
      </div>
    </div>
  </div>
</body>


